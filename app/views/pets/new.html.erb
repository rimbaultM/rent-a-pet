<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new pet</h1>

      <%= simple_form_for @pet do |f| %>
        <%= f.input :name %>
        <%= f.input :species %>
        <%= f.input :description %>
        <%= f.input :price_per_day %>
        <%= f.input :photo %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
