<%= render 'shared/navbar' %>
    <!-- integration flash alerts devise -->
<%= render 'shared/flashes' %>



<div class="container pt-5 ">
  <div class="place">
    <div class="card-product">
        <%= cl_image_tag(@pet.photo.key) %>
      <div class="card-product-infos">
        <h1 class="titre"><%= @pet.name %></h1>
        <div class="informations">
          <p><%= @pet.description %></p>
          <p class="pt-2">Adresse : <%= @pet.address %></p>
          <p class="pt-2">Espèce : <%= @pet.species %></p>
          <p class="prix pt-2"><strong><%= @pet.price_per_day %> € / jour</strong></p>
          <br>
          <div>
            <%= simple_form_for([@pet, @reservation], remote: true) do |f| %>
              <%= f.input :start_date, as: :date, html5: true, label: "Date de début" %>
              <%= f.input :end_date, as: :date, html5: true, label: "Date de début" %>
              <%= f.submit "Reservez*", class:"btn btn-primary resa" %>
            <% end %>
          </div>



          <br>
          <br>
          <br><br>
           <p class="ast">* L'acteur ne peut être loué moins d'une journée.<br>Il sera à votre disposition pour faire le ménage, la cuisine ou garder les enfants.</p>



        </div>
      </div>
    </div>


  </div>

</div>
<%= render 'shared/footer' %>


