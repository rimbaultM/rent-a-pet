<%= render 'shared/navbar' %>
    <!-- integration flash alerts devise -->
<%= render 'shared/flashes' %>

 <h1 class="index-title pt-5">Choisissez votre partenaire de sortie</h1>

<div class="indexcontent pt-3">

  <div class="cards">

    <% @pets.each do |pet| %>

      <%= link_to pet_path(pet), class: 'no-deco' do %>

        <div class="card">
          <%= cl_image_tag(pet.photo.key) %>
          <div class="card-infos">
            <h2 class="pt-3 name"> <%= pet.name %></h2>
            <h2 class="card-pricing price"><strong> <%= pet.price_per_day %></strong>â‚¬/ jour</h2>
            <%= cl_image_tag pet.user.photo.key, class: 'card-user avatar-bordered' %>
          </div>
        </div>

      <% end %>

    <% end %>

  </div>
      <div id="map"
        style="width: 700px; height: 100vh"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
</div>
